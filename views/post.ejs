<div class="w-50 mx-auto my-lg-4 my-3">
    <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="PostImage" class="form-label text-light  fs-4">Post Image <span class="text-danger fs-5">*</span></label>
            <input type="file" class="bg-light text-dark form-control" name="image" accept="image/*" id="PostImage"
                aria-describedby="ImageUrl" required>
        </div>
        <div class="d-flex align-items-center gap-lg-0 gap-4 my-2 justify-content-between">
            <div>
                <input type="file" class="bg-white text-dark rounded-0 border-0 form-control" name="optionalimage" accept="image/*" id="PostOptionalImage"
                    aria-describedby="ImageUrl">
            </div>
        </div>
        <div class="mb-3">
            <label for="PostTitle" class="form-label text-light fs-4">Title <span class="text-danger fs-5">*</span></label>
            <input type="text" class="bg-light text-dark form-control" name="title" id="PostTitle" aria-describedby="TitleContent"
                required>
            <div id="TitleContent" class="form-text text-light fs-4">Post Details <span class="text-danger fs-5">*</span></div>
        </div>
        <div class="form-floating mb-3">
            <textarea class="bg-light text-dark form-control textarea overflow-hidden" placeholder="Post Details" name="description"
                id="floatingTextarea" required></textarea>
        </div>
        <div class="d-flex align-items-center justify-content-center my-4">
            <button class="btn w-25 btn-outline-success text-light">Post</button>
        </div>
        <div id="message" class="text-danger"></div>
    </form>
</div>

