<head>
    <style type="text/css">
        textarea { 
            height: 200px !important;
        }
</style>
</head>
<div class="w-50 mx-auto">
    <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="PostImage" class="form-label">Post Image</label>
            <input type="file" class="form-control" name="image" accept="image/*" id="PostImage"
                aria-describedby="ImageUrl" required>
        </div>
        <div class="mb-3">
            <label for="PostTitle" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" id="PostTitle" aria-describedby="TitleContent"
                required>
            <div id="TitleContent" class="form-text">Post Details</div>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control overflow-hidden" placeholder="Post Details" name="description"
                id="floatingTextarea" required></textarea>
        </div>
        <div class="d-flex align-items-center justify-content-center my-4">
            <button class="btn w-25 btn-outline-success">Post</button>
        </div>
        <div id="message" class="text-danger"></div>
    </form>
</div>

