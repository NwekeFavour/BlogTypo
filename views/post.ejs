<div class="w-50 mx-auto">
    <form action="/upload" method="POST">
        <div class="mb-3">
            <label for="PostTitle" class="form-label">Post Image</label>
            <input type="file" class="form-control" name="image" accept="image/*" id="PostTitle1" aria-describedby="ImageUrl">
        </div>
        <div class="mb-3">
            <label for="PostTitle" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" id="PostTitle1" aria-describedby="TitleContent" required>
            <div id="TitleContent" class="form-text">Post Details</div>
        </div>
        <div class="form-floating">
            <textarea class="form-control overflow-auto" placeholder="Post Details" name="description"
                id="floatingTextarea" required></textarea>
        </div>
        <div class="d-flex align-items-center justify-content-center my-4">
            <button class="btn w-25 btn-outline-success">Post</button>
        </div>
    </form>
</div>