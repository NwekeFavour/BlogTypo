<div>
    <% if (nextbeatPost.length > 0) { %>
        <div class="table-responsive" id="posts">
            <table class="table table-striped table-dark ">
                <thead class="tr border">
                    <tr class="">
                        <th>#</th>
                        <th>Title</th>
                        <th>Month</th>
                    </tr>
                </thead>
                <tbody class="">
                    <% nextbeatPost.forEach((nextB, index)=> { %>
                        <tr>
                            <th scope="row">
                                <%= index + 1 %>
                            </th>
                            <td class="text-capitalize">
                                <a class="text-light link-underline-secondary" href="/nextbeats/profiles">
                                    <%= nextB.title %>
                                </a>
                            </td>
                            <td colspan="2">
                                <%= nextB.month%>
                            </td>
                            <td colspan="2">

                            </td>
                            <td colspan="2">
                                <button type="button" class=" btn btn-lg px-2 py-1 btn-danger trash" data-doc="<%= nextB._id%>"
                                    id="delete">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="30" fill="currentColor"
                                        class="bi bi-trash" viewBox="0 0 16 16">
                                        <path
                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path
                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        
        <% } else { %>
            <div class="text-center">
                <div>
                    <h4 class="text-light text-capitalize">nextbeats isn't available for now</h4>
                </div>
            </div>
            <% } %>
            <div class="d-flex align-items-center justify-content-center">
                <div class="btn btn-primary">
                    <a class="text-decoration-none text-light text-capitalize" href="">create nextbeats</a>
                </div>
            </div>
</div>