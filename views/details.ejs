<body>
    
    <main>
        <article class="blog-post d-flex justify-content-around align-items-center">
            <div class="m-lg-3">
                <div class="d-flex align-items-center justify-content-center">
                    <img src="data:<%= post.image.contentType %>;base64,<%= post.image.data %>" alt="<%= post.title %>" class="" width="600" height="400" />
                </div>
                <h3 class="post-title text-capitalize fs-3">
                    <%= post.title %>
                </h3>
                <div class="text-wrap">
                    <p class="post-meta">admin
                        <time datetime="2024-06-25">
                            <%= post.createdAt %>
                        </time>
                    </p>
                    <div class="post-content w-75 mx-auto">
                        <p>
                            <%= post.description %>
                        </p>
                    </div>
                </div>
            </div>
        </article>
    </main>

    <script type="text/javascript" src="/js/script.js"></script>
</body>