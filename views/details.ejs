<body>
    
    <main>
        <article class="blog-post d-flex justify-content-around align-items-center">
            <div class="m-lg-3">
                <div class="d-lg-flex d-none align-items-center justify-content-center">
                    <img src="data:<%= post.image.contentType %>;base64,<%= post.image.data %>" alt="<%= post.title %>" class="" width="800"
                        height="500" />
                </div>
                <h3 class="post-title fw-bolder fs-1 text-light-emphasis text-uppercase my-2 text-center ">
                    <%= post.title %>
                </h3>               
                <div class="text-wrap text-light">
                    <p class=" post-meta">
                        <time datetime="2024-06-25">
                            <%= post.createdAt %>
                        </time>
                    </p>
                    <div class="d-lg-none d-flex align-items-center justify-content-center">
                        <img src="data:<%= post.image.contentType %>;base64,<%= post.image.data %>" alt="<%= post.title %>" class=""
                            width="320" height="300" />
                    </div>
                    <div class="post-content w-100 mx-auto">
                        <p>
                            <%= post.description %>
                        </p>
                    </div>
                </div>
            </div>
        </article>
    </main>

    <script type="text/javascript" src="/js/script.js"></script>
</body>