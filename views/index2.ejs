<head>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
    <div class="Hero d-flex align-items-center justify-content-center container">
        <div class=" text-black fw-bold">
            <p class="text-uppercase head m-0 mb-5">shfl</p>
        </div>
    </div>
    <div class="text-center">
        <h1 class=" shfl m-0">
            <%= text.shfl %>
        </h1>
        <div class="border-bottom text-light  art my-2 w-50 mx-auto">
            <p class="m-0 m-lg-2 fs-3 ">Your Home for art, cultural events and fashion on a shuffle</p>
        </div>
    </div>
    <div class="container   gap-5 my-lg-4">
        <div class="row gap-5 justify-content-center">
            <div class="shuffle col-lg-6 col-6">
                <!-- <img src="/images/Home/SHUFFLE.jpg" width="400" height="400" alt="shflbeat"> -->
            </div>
            <div class=" shuffle_dave my-lg-5  col-lg-6 col-6">
                <div class="trending text-light">
                    <div>
                        <h2 class="fw-semibold">Hot Trending on this<br /> week</h2>
                    </div>
                    <div class="text-start uncover w-100 my-lg-4">
                        <p class="">Discover the hidden techniques that elevate your artistry: Expert tips to enhance
                            your creative journey.
                        </p>
                    </div>
                    <div class="d-flex align-items-center gap-4">
                        <div class="">
                            <a class="text-light fs-4 text-decoration-none" href="">See all</a>
                        </div>
                        <div class="d-flex arrow align-items-center">
                            <i class=" fs-4 fas fa-arrow-right-long"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card my-lg-4 text-center my-2 border-0 bg-transparent">
        <% spotify.forEach(item=> { %>
            <div class="d-flex my-lg-0 my-3 align-items-center LLonaSpotify justify-content-center">
                <a href="<%= item.link %>">
                    <img src="data:<%= item.image.contentType %>;base64,<%= item.image.data %>" width="600" height="550"
                        alt="LLonaSpotify">
                </a>
            </div>
            <div class="card-body ">
                <div class="text-light">
                    <h2 class="text-light-emphasis fw-semibold text-capitalize fs-4">
                        <%= item.playlistname %>
                    </h2>
                </div>
            </div>
            <% }) %>
    </div>
    <div class="bg-service">
        <div class="container mx-auto">
            <div class="row">
                <div class=" Pr col-lg-6">
                    <p class="m-0 py-3 fs-3">Marketing & PR</p>
                </div>
                <div class="py-3 col-lg-6">
                    <p class="m-0 text-light text-uppercase">boost your brand's visibility and engagement with our
                        innovative marketing and PR strategies</p>
                </div>
                <div class=" Pr col-lg-6">
                    <p class=" py-3 fs-3">Content Creation</p>
                </div>
                <div class="py-3 col-lg-6">
                    <p class="m-0 text-light text-uppercase">Unlock the secrets to impactful content creation! Engage
                        your audience and boost your brand with expert strategies</p>
                </div>
            </div>
        </div>
    </div>
</body>