<form action="/playlist/upload" method="POST" enctype="multipart/form-data">
    <div class="w-75 mx-auto">
        <div>
            <label for="playlistimage" class="form-label text-light fs-4">Playlist jpeg<span
                    class="text-danger fs-5">*</span></label>
            <input type="file" class="bg-light text-dark form-control" name="image" accept="image/*" id="playlistimage"
                aria-describedby="playlistimage" required>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label text-light text-capitalize">playlist <span
                    class="text-danger fs-5">*</span></label>
            <input type="text" name="playlistname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label text-capitalize text-light">link<span
                    class="text-danger fs-5">*</span></label>
            <input type="url" name="link" class="form-control" id="exampleInputPassword1">
        </div>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <button type="submit" class=" btn btn-lg btn-light">Submit</button>
    </div>
</form>